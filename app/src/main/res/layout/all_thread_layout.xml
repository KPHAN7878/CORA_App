<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/t_cardview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        tools:layout_editor_absoluteX="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/t_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t_username"
                android:layout_width="83dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="username"
                app:layout_constraintStart_toEndOf="@+id/t_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t_date"
                android:layout_width="94dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="date"
                app:layout_constraintStart_toEndOf="@+id/t_username"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t_title"
                android:layout_width="214dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_username" />

            <TextView
                android:id="@+id/t_description"
                android:layout_width="405dp"
                android:layout_height="66dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_title" />

            <ImageView
                android:id="@+id/t_upvote"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_description"
                app:srcCompat="@drawable/thumbsup" />

            <TextView
                android:id="@+id/t_likes_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="likes"
                app:layout_constraintStart_toEndOf="@+id/t_upvote"
                app:layout_constraintTop_toBottomOf="@+id/t_description" />

            <ImageView
                android:id="@+id/t_downvote"
                android:layout_width="41dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toEndOf="@+id/t_likes_text"
                app:layout_constraintTop_toBottomOf="@+id/t_description"
                app:srcCompat="@drawable/thumbsdown" />

            <TextView
                android:id="@+id/t_dislikes_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="dislikes"
                app:layout_constraintStart_toEndOf="@+id/t_downvote"
                app:layout_constraintTop_toBottomOf="@+id/t_description" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar4"
                android:layout_width="411dp"
                android:layout_height="10dp"
                android:background="#F1EBEB"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_dislikes_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>